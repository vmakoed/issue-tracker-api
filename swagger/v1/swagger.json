{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "basePath": "/api/v1",
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "user": {
      "type": "object",
      "required": [
        "id",
        "attributes"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "attributes": {
          "type": "object",
          "required": [
            "email",
            "role"
          ],
          "properties": {
            "email": {
              "type": "string"
            },
            "role": {
              "type": "string",
              "enum": [
                "author",
                "manager"
              ]
            }
          }
        }
      }
    },
    "issue": {
      "type": "object",
      "required": [
        "id",
        "attributes",
        "relationships"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "attributes": {
          "type": "object",
          "required": [
            "title",
            "description",
            "status"
          ],
          "properties": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "status": {
              "type": "string",
              "enum": [
                "pending",
                "in_progress",
                "resolved"
              ]
            }
          }
        },
        "relationships": {
          "type": "object",
          "required": [
            "author",
            "manager"
          ],
          "properties": {
            "author": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "type": "object",
                  "required": [
                    "id"
                  ],
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "manager": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "object",
                  "x-nullable": true,
                  "required": [
                    "id"
                  ],
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/issues": {
      "get": {
        "summary": "Returns list of issues",
        "tags": [
          "Issues"
        ],
        "description": "\n        When logged in as an author, returns author's issues.\n        When logged in as a manager, returns all issues.\n      ",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "Bearer": {
            }
          }
        ],
        "parameters": [
          {
            "name": "page",
            "description": "\n                  Used for pagination. Number of items per page: 25'\n                ",
            "in": "query",
            "type": "integer",
            "allowEmptyValue": true,
            "default": 1
          },
          {
            "name": "status",
            "description": "Used for filtering issues list",
            "in": "query",
            "type": "string",
            "enum": [
              "pending",
              "in_progress",
              "resolved"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "Issues list",
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/issue"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Creates an issue",
        "tags": [
          "Issues"
        ],
        "description": "\n        You must be logged in as author to create an issue.\n        The issue is crated with 'pending' status.\n        You cannot set status or manager_id to an issue (these parameters will be ignored).\n      ",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "Bearer": {
            }
          }
        ],
        "parameters": [
          {
            "name": "issue",
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "issue"
              ],
              "properties": {
                "issue": {
                  "type": "object",
                  "required": [
                    "title",
                    "description"
                  ],
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created issue",
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "$ref": "#/definitions/issue"
                }
              }
            }
          }
        }
      }
    },
    "/issues/{id}": {
      "get": {
        "summary": "Returns the issue",
        "tags": [
          "Issues"
        ],
        "description": "\n        When logged in as an author, you can only fetch your issues.\n        When logged in as a manager, you can fetch any issue.\n      ",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "Bearer": {
            }
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Issue found",
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "$ref": "#/definitions/issue"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Updates an issue",
        "tags": [
          "Issues"
        ],
        "description": "\n        When logged in as an author, you can only update title and description.\n        When logged in as a manager, you can only update status and manager_id.\n        You can only set a manager_id to your id or to an empty value.\n        You cannot update status to 'in_progress' or 'resolved' unless you have assigned an issue to yourself.\n        You cannot update manager_id to an empty value if its status is either 'in progress' of 'resolved'.\n      ",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "Bearer": {
            }
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "issue",
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "issue"
              ],
              "properties": {
                "issue": {
                  "type": "object",
                  "required": [
                    "title",
                    "description"
                  ],
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string",
                      "enum": [
                        "pending",
                        "in_progress",
                        "resolved"
                      ]
                    },
                    "manager_id": {
                      "type": "integer",
                      "allow_empty_value": true
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Updated issue",
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "$ref": "#/definitions/issue"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletes an issue",
        "tags": [
          "Issues"
        ],
        "description": "\n        You can only delete an issue if you are logged in as its author.\n      ",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "Bearer": {
            }
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "Deleted issue"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Provides an authorization token",
        "tags": [
          "Login"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "required": [
                      "email",
                      "password"
                    ]
                  }
                }
              },
              "required": [
                "user"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Logged in successfully",
            "schema": {
              "type": "object",
              "required": [
                "token"
              ],
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/signup": {
      "post": {
        "summary": "Registers a user",
        "tags": [
          "Signup"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "user"
              ],
              "properties": {
                "user": {
                  "type": "object",
                  "required": [
                    "email",
                    "password",
                    "role"
                  ],
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "role": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created",
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "$ref": "#/definitions/user"
                }
              }
            }
          }
        }
      }
    }
  }
}